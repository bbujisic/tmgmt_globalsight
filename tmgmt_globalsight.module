/**
 * Implements hook_cron().
 */
function tmgmt_globalsight_cron() {
  // Skip if disabled.
  if (variable_get('tmgmt_globalsight_download_on_cron', 1) != 1) {
    return;
  }
  tmgmt_globalsight_get_all();
}

/**
 * Implements hook_menu().
 */
function tmgmt_globalsight_menu() {
